    <script>
      const decreaseButtons = document.querySelectorAll(".decrease");
      const increaseButtons = document.querySelectorAll(".increase");
      const quantityInputs = document.querySelectorAll(".quantity");

      decreaseButtons.forEach((button, index) => {
        button.addEventListener("click", () => {
          if (quantityInputs[index].value > 0) {
            quantityInputs[index].value--;
          }
        });
      });

      increaseButtons.forEach((button, index) => {
        button.addEventListener("click", () => {
          quantityInputs[index].value++;
        });
      });
    </script>

    <script>
      // Get the necessary DOM elements
      const totalAmountElement = document.getElementById("total_amount");
      const dueElement = document.getElementById("due");
      const paidElement = document.getElementById("paid");
      const newDueElement = document.getElementById("new_due");

      // Initial values
      let totalAmount = parseFloat(totalAmountElement.textContent);
      let due = parseFloat(dueElement.textContent);
      let paid = 0;

      // Add event listener to the "Paid" input field
      paidElement.addEventListener("input", updateAmounts);

      // Function to update the calculated amounts
      function updateAmounts() {
        paid = parseFloat(paidElement.value);

        const totalPaid = paid + (totalAmount - due);
        const newDue = due - paid;

        newDueElement.textContent = "  " + newDue.toFixed(2);

        // Ensure newDue doesn't go below zero
        if (newDue < 0) {
          newDueElement.textContent = "0.00";
          paid = due;
          paidElement.value = due.toFixed(2);
        }

        totalPaidElement.textContent = totalPaid.toFixed(2);
      }
    </script>

