            <!-- Invoice -->
            <div
              class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto my-4 sm:my-10"
            >
              <div class="sm:w-11/12 lg:w-3/4 mx-auto">
                <!-- Card -->
                <div
                  class="flex flex-col p-4 sm:p-10 bg-white shadow-md rounded-xl dark:bg-gray-800"
                >
                  <div class="flex justify-between">
                    <div>
                      <h3
                        class="flex text-2xl md:text-3xl font-semibold text-gray-800 dark:text-gray-200"
                      >
                        Invoice
                      </h3>
                      <span class="mt-1 block text-gray-500 font-bold"
                        ># <%= data.o_code %></span
                      >
                    </div>
                    <!-- Col -->

                    <div class="text-right">
                      <h1>MN Inc.</h1>
                      <address class="italic text-gray-800 dark:text-gray-200">
                        67 Montaj Mohol , Lakecity<br />
                        Neharipara, London(Sylhet)<br />
                        Bangladesh<br />
                      </address>
                    </div>
                    <!-- Col -->
                  </div>

                  <!-- Grid -->
                  <div class="mt-8 grid sm:grid-cols-2 gap-3">
                    <div>
                      <h3
                        class="text-lg font-semibold text-gray-800 dark:text-gray-200"
                      >
                        Bill to:
                      </h3>
                      <h3
                        class="text-lg font-semibold text-gray-800 dark:text-gray-200"
                      >
                        <%= data.customer %>
                      </h3>
                      <address class="mt-2 not-italic text-gray-500">
                        <%= data.cus_address %>
                      </address>
                    </div>
                    <!-- Col -->

                    <div class="sm:text-right space-y-2">
                      <!-- Grid -->
                      <div
                        class="grid grid-cols-2 sm:grid-cols-1 gap-3 sm:gap-2"
                      >
                        <dl class="grid sm:grid-cols-5 gap-x-3">
                          <dt
                            class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                          >
                            Invoice date:
                          </dt>
                          <dd class="col-span-2 text-gray-500">
                            <%= data.time_date %>
                          </dd>
                        </dl>
                      </div>
                      <!-- End Grid -->
                    </div>
                    <!-- Col -->
                  </div>
                  <!-- End Grid -->

                  <!-- Table -->
                  <div class="mt-6">
                    <div
                      class="border border-gray-300 p-4 rounded-lg space-y-4 dark:border-gray-700"
                    >
                      <div class="hidden sm:grid sm:grid-cols-5">
                        <div
                          class="sm:col-span-2 text-xs font-medium text-gray-500 uppercase"
                        >
                          Payment Date
                        </div>
                        <div
                          class="text-left text-xs font-medium text-gray-500 uppercase"
                        >
                          Total Amount
                        </div>
                        <div
                          class="text-left text-xs font-medium text-gray-500 uppercase"
                        >
                          Paid
                        </div>
                        <div
                          class="text-right text-xs font-medium text-gray-500 uppercase"
                        >
                          Due
                        </div>
                      </div>

                      <% rows.forEach(row => { %>

                      <div
                        class="hidden sm:block border-b border-gray-200 dark:border-gray-700"
                      ></div>

                      <div class="grid grid-cols-3 sm:grid-cols-5 gap-2">
                        <div class="col-span-full sm:col-span-2">
                          <p
                            class="font-medium text-gray-800 dark:text-gray-200"
                          >
                            <%= row.payment_date %>
                          </p>
                        </div>
                        <div>
                          <p class="text-gray-800 dark:text-gray-200">
                            <%= data.total_amount %>
                          </p>
                        </div>
                        <div>
                          <p class="text-gray-800 dark:text-gray-200">
                            <%= row.paid %>
                          </p>
                        </div>
                        <div>
                          <p
                            class="sm:text-right text-gray-800 dark:text-gray-200"
                          >
                            <%= row.due %>
                          </p>
                        </div>
                      </div>

                      <% }); %>
                    </div>
                  </div>
                  <!-- End Table -->
                  <!-- Flex -->
                  <div class="mt-8 flex sm:justify-end">
                    <div class="w-full max-w-2xl sm:text-right space-y-2">
                      <a>
                        <% if(data.due == 0) {%>
                        <a
                          data-drawer-target="drawer-update-product-default"
                          data-drawer-show="drawer-update-product-default"
                          aria-controls="drawer-update-product-default"
                          data-drawer-placement="right"
                          class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
